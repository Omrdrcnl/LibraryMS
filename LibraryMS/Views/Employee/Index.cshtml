@using LibraryMS.Models.Entity
@model List<tblEmployee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container my-5">
    <h1>Personeller</h1>

    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>
                Adı
            </th>
            <th>
                Soyadı
            </th>
            <th>
                Sil
            </th>
            <th>
                Güncelle
            </th>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Surname</td>
              
                <td>
                    @Html.ActionLink("Sil", "DeleteEmployee", new { id = p.Id }, new
                    {
                        @class = "btn btn-danger",
                        onclick =
               "return confirm('Silmek İstiyor musunuz?')"
                    })
            </td>
            <td><a href="/Employee/CallEmployee/@p.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
    </table>
    <a href="~/Employee/AddEmployee" class="btn btn-primary">Yeni Çalışan Ekle</a>

</div>
