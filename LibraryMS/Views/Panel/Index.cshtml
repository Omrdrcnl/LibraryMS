@model LibraryMS.Models.Entity.tblMember


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

@using (Html.BeginForm("Index2", "Panel", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:30px">

        <tr>
            <td>
                <label style="font-weight:bolder"> Mail Adresi: </label> @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @readonly = "true" })
                
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @readonly="true" })
            </td>
        </tr>
        <tr>
            <td> Kullanıcı Adı:   @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @readonly = "true" })</td>
        </tr>
        <tr>
            <td> Şifre:   @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td> Fotoğraf:  @Html.TextBoxFor(x => x.Photo, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td> Okul:   @Html.TextBoxFor(x => x.School, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Bilgileri Güncelle</button>
            </td>
        </tr>
    </table>
}