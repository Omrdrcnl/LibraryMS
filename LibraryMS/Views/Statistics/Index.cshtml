
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<script src="~/web2/js/Chart1.js"></script>

<link href="~/web2/css/style.css" rel="stylesheet" />
<a class="weatherwidget-io" href="https://forecast7.com/tr/40d5034d60/corum-province/" data-label_1="ÇORUM" data-label_2="WEATHER" data-theme="original">ÇORUM WEATHER</a>
<script>
